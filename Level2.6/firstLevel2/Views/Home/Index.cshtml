@model firstLevel2.Models.UserrInfo
@{
    ViewData["Title"] = "Home Page";
}

@using (Html.BeginForm("rbt", "Home",FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.UserName, htmlAttributes: new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.PasswordFor(model => model.Password, htmlAttributes: new { htmlAttributes = new { @class = "form-control" } })
        </div>
       @*@Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })*@
        @*@Html.CheckBox("remember me", htmlAttributes: new { @class = "control-label col-md-10" })*@
        <input type="submit" value="save" />
    </div>
}